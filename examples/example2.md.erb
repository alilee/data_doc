   store 'approver' do
     string 'name'
     string 'role'
     date 'trim'
     string 'version'
   end
   
   approver name: 'A. Boss', role: 'First Level Manager', version: 0.2, trim: 'ADD2012/111111'
   approver name: 'B. Boss', role: 'Second Level Manager'
